% mean=mean(InverseFFT_data);
mean=str2num(mean);
disp(['mean value: ', num2str(mean)])
std=std(InverseFFT_data);
% std=str2num(std);
disp(['standard deviation: ', num2str(std)])
var=var(InverseFFT_data);
% var=str2num(var);
disp(['variance value: ', num2str(var)])
samples=(length((brushed_data)));
fmhh=str2num(fmhh);
fmll=str2num(fmll);
save_statistics= [max;min;mean;std;var;fs;wwidth;fmll;fmhh;samples];
    
